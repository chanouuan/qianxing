/**app.wxss**/
@import "./iconfont.wxss";

page, view, scroll-view, swiper, movable-area, cover-view, text, icon, rich-text,
progress, button, checkbox-group, checkbox, form, input, label, picker,
picker-view, radio-group, slider, switch, textarea, navigator, audio, image,
video, live-player, live-pusher, open-data, web-view {
  box-sizing: border-box;
}

view, scroll-view {
  -webkit-overflow-scrolling: touch;
}

page {
  width: 100%;
  height: 100%;
  background: #F7F8FA;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

.status-0 {
  color: #e64340;
}

.status-1 {
  color: #576b95;
}

.status-2 {
  color: #09bb07;
}

.status-3 {
  color: #888;
}

.status--1 {
  color: #ccc;
}

.status--3 {
  color: #ccc;
}

.default-button {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 14px;
  font-weight: normal;
  min-width: 288rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(180deg, rgb(132, 163, 233), rgb(22, 91, 220));
  border-radius: 80rpx;
  margin: 0;
  padding: 0;
  border: none;
}

.pure-top {
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}

.pure-top::after {
  content: '';
  width: 120%;
  height: 100rpx;
  position: absolute;
  left: -10%;
  top: 0;
  z-index: -1;
  border-radius: 0 0 50% 50%;
  background-color: #1fd39a;
}

.loading-wrap {
  background: #fff;
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 100%;
  align-items: center;
  justify-content: center;
}

.icon-loading {
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
  margin: auto;
}
