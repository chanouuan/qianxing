.tab-bar {
  position: fixed;
  z-index: 99999;
  bottom: 0;
  left: 0;
  right: 0;
  height: 98rpx;
  background: rgb(255, 255, 255);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: hidden;
  box-sizing: border-box;
  box-shadow: 0px 0px 35px 0px rgba(222, 222, 222, 0.29);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-image {
  width: 50rpx;
  height: 50rpx;
  display: block;
}

.tab-bar-text {
  font-size: 22rpx;
  font-weight: 500;
}