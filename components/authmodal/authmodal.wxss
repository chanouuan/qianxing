/* components/authmodal/authmodal.wxss */
@import "/iconfont.wxss";

.authmodal {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.65);
  z-index: 99999;
}

.authmodal .modal-box {
  width: 600rpx;
  height: 400rpx;
  background-color: #fff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(221, 243, 255, 0.05);
  border-radius: 10rpx;
}

.modal-box .box-head {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  justify-content: center;
}

.modal-box .head-title {
  text-align: center;
  color: #333;
  font-size: 36rpx;
}

.modal-box .close-modal {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 10rpx;
  height: 66rpx;
  line-height: 66rpx;
}

.modal-box .back {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
  height: 66rpx;
  line-height: 66rpx;
}

.modal-box icon {
  color: #ccc;
  font-size: 42rpx
}

.modal-box .wx-type {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #5bde82;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin: 38rpx auto 0;
  padding: 0;
}

.modal-box .tel-type {
  width: 399rpx;
  height: 87rpx;
  margin: 30rpx auto 0;
  line-height: 88rpx;
  text-align: center;
  color: #5bde82;
  font-size: 32rpx;
  background: #fff;
  border: 1rpx solid #5bde82;
  border-radius: 8rpx;
}

.modal-box .tel-input {
  width: 540rpx;
  margin: 60rpx auto 0;
  border-bottom: 1rpx solid #ccc;
  color: #333;
  font-size: 24rpx;
  padding-bottom: 10rpx;
}

.modal-box .next {
  width: 400rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #5bde82;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  margin: 40rpx auto 0;
  border-radius: 8rpx;
}

.modal-box .con {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-box .tel-num {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #999;
  margin-top: 50rpx;
}
.modal-box .real-code{
  width:0;
  height: 0
}
.modal-box .tel-num .count {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 34rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
  border: 1rpx solid #ccc;
}

.modal-box .tel-num .count-no {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 34rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #333;
  text-align: center;
  border-radius: 28rpx;
  border: 1rpx solid #ccc;
}

.modal-box .vercode {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 60rpx;
}

.modal-box .vercode .code-num {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #333;
  font-weight: 500;
  border: 1rpx solid #ccc;
  margin: 0 6rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center
}
