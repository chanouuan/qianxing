@import "/iconfont.wxss";

.modal-warp {
  position: fixed;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 99999;
}

.modal-box {
  width: 700rpx;
  min-height: 350rpx;
  background-color: #fff;
  box-shadow: 0px 6rpx 10rpx 0px rgba(221, 243, 255, 0.2);
  border-radius: 10rpx;
  font-size: 14px;
  box-sizing: border-box;
}

.close-modal {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #ccc;
}

.box-head {
  padding: 40rpx;
  text-align: center;
}

.modal-footer {
  padding: 20rpx 0 40rpx 0;
  display: flex;
  justify-content: center;
}

.default-button {
  font-size: 14px;
  font-weight: normal;
  width: 288rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(180deg, rgb(132, 163, 233), rgb(22, 91, 220));
  border-radius: 80rpx;
  margin: 0;
  padding: 0;
  border: none;
}