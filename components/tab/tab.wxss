/* pages/components/tab/tab.wxss */
.tab-container {
	position: fixed;
	z-index: 9999;
	width: 100%;
	height: 40px;
	background: #FFF;
	box-shadow: 0px 0px 10px 0px rgba(216, 211, 211, 0.6);
}

.tab {
	padding-left: 20px;
	width: 100%;
	height: 100%;
	white-space: nowrap;
	overflow: hidden;
	line-height: 39px;
	background: #FFF;
}

.tab-item {
	display: inline-block;
	margin-right: 88rpx;
	font-size: 14px;
	color: rgba(34, 34, 34, 1);
	position: relative;
}

.tab-item:last-child {
	margin-right: 0;
}

.count {
	min-width: 34rpx;
	height: 34rpx;
	line-height: 34rpx;
  background: rgb(245, 112, 112);
  border-radius: 20rpx;
  position: absolute;
  right: -34rpx;
  top: 10rpx;
  color: #fff;
	font-size: 22rpx;
	text-align: center;
	padding: 0 4rpx;
}

.item {
	width: fit-content;
	margin: auto;
	font-size: 14px;
	height: 39px;
}

.active {
	color: rgb(22, 91, 220);
	border-bottom: 2px solid rgb(22, 91, 220);
	font-weight: 600;
}