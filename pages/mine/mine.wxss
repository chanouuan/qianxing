/* pages/mine/mine.wxss */

.top-bg {
  width: 100%;
  height: 860rpx;
  -webkit-background: linear-gradient(148deg, rgba(31, 211, 154, 1) 0%, rgba(39, 174, 248, 1) 98%);
  -moz-background: linear-gradient(148deg, rgba(31, 211, 154, 1) 0%, rgba(39, 174, 248, 1) 98%);
  -o-background: linear-gradient(148deg, rgba(31, 211, 154, 1) 0%, rgba(39, 174, 248, 1) 98%);
  background: linear-gradient(148deg, rgba(31, 211, 154, 1) 0%, rgba(39, 174, 248, 1) 98%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative
}

.shelter {
  position: absolute;
  top: 430rpx;
  left: 0;
  width: 0;
  height: 0;
  border-color: transparent transparent #f9f9f9 #f9f9f9;
  border-width: 216rpx 375rpx 216rpx 375rpx;
  border-style: solid;
}

.ava-wrap {
  border-radius: 50%;
  width: 132rpx;
  height: 132rpx;
  background: #fff;
  overflow: hidden;
  margin-top: 146rpx;
}

.ava-wrap image {
  width: 100%;
  height: 100%;
}

.def-ava {
  border-radius: 50%;
  width: 132rpx;
  height: 132rpx;
  background: transparent;
  border: 10rpx solid #fff;
  overflow: hidden;
  margin-top: 146rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.def-ava icon {
  color:#fff;
  font-size:90rpx
}

.bind-btn {
  color: #fff;
  font-size: 30rpx;
  height: 40rpx;
  line-height: 40rpx;
  background-color: transparent;
  border: none;
  margin-top: 15rpx;
}

.list {
  width: 700rpx;
  box-sizing: border-box;
  position: absolute;
  left: 25rpx;
  background: #fff;
  border-radius: 10px;
  z-index: 12;
  top: 449rpx;
  padding: 30rpx 0 0;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.05);
  overflow: hidden;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.item {
  width: 25%;
  margin-bottom: 30rpx;
}

.item-icon {
  text-align: center;
  margin-bottom: 15rpx;
  height: 66rpx;
}

.btn-feedback {
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  font-weight: normal;
  display: flex;
  justify-content: center;
  width: 100% !important;
  height: 100% !important;
  line-height: 1;
  border-radius: 0;
  box-sizing: content-box;
}

.item-icon icon {
  font-size: 60rpx;
}

.item-desc {
  font-size: 30rpx;
  color: #666;
  text-align: center;
}