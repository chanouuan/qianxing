/* pages/user/tips/tips.wxss */

.container {
  height: 100%;
  display: flex;
  padding: 25rpx 0;
}

.con-main {
  background-color: #fff;
  border-radius: 20rpx;
  width: 700rpx;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.2);
  color: #222;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
  padding: 40rpx;
  text-align: center;
}

.con-warn {
  font-size: 14px;
  color: #222;
}

.con-warn-i {
  width: 100%;
  text-align: left;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.con-warn-i icon {
  margin-right: 40rpx;
}

.con-btn {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.btn {
  font-size: 14px;
  width: 288rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(45deg, rgba(91, 222, 130, 1), rgba(31, 211, 144, 1));
  border-radius: 10rpx;
  font-weight: 500;
  margin: 0;
  padding: 0;
  border: none;
}

.b1 {
  background: #ccc;
}