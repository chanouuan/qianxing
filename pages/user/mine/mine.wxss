/* pages/mine/mine.wxss */

.top-bg {
  width: 100%;
  height: 400rpx;
  background: linear-gradient(148deg, rgba(31, 211, 154, 1) 0%, rgba(39, 174, 248, 1) 98%);
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.ava-wrap {
  border-radius: 50%;
  width: 132rpx;
  height: 132rpx;
  background: #fff;
  overflow: hidden;
  margin-top: 146rpx;
}

.ava-wrap image {
  width: 100%;
  height: 100%;
}

.def-ava {
  border-radius: 50%;
  width: 132rpx;
  height: 132rpx;
  background: transparent;
  border: 10rpx solid #fff;
  overflow: hidden;
  margin-top: 146rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.def-ava icon {
  color:#fff;
  font-size:90rpx
}

.bind-btn {
  color: #fff;
  font-size: 14px;
  height: 40rpx;
  line-height: 40rpx;
  background-color: transparent;
  border: none;
  margin-top: 15rpx;
}

.list {
  background-color: #fff;
  margin-top: 10px;
}

.item {
  height: 56px;
  line-height: 56px;
	padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
}

.btn-feedback {
  padding: 0;
  margin: 0;
  border: none;
  background: none;
  font-weight: normal;
  width: 100% !important;
  height: 100% !important;
  font-size: 14px;
}

.item-icon {
  display: flex;
  align-items: center;
  font-size: 14px;
}

.item-icon icon {
  font-size: 24px;
  margin-right: 20px;
}

.item-desc icon {
  font-size: 14px;
  color: #ccc;
}