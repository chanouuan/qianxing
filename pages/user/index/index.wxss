/**index.wxss**/

.custom-swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-img {
  width: 100%;
  height: 100%;
  background-color: #fff;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: relative;
}

.swiper-txt {
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  padding: 0 30rpx;
  overflow: hidden;
  font-size: 12px;
  color: #fff;
}

.main-con {
  margin-top: 30rpx;
  padding-top: 50rpx;
  background-color: #fff;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.2);
  color: #666;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.main-item {
  width: 26%;
  margin-bottom: 50rpx;
}

.main-icon {
  margin-bottom: 30rpx;
  background-image: linear-gradient(to right, rgba(253,190,62,.8), rgba(255,168,11,1));
  border-radius: 20rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.main-icon icon {
  font-size: 80rpx;
  color: #fff;
}

.main-desc {
  font-size: 12px;
  color: #666;
  text-align: center;
}

.more-con {
  margin-top: 30rpx;
  padding-top: 40rpx;
  background-color: #fff;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.2);
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.more-item {
  width: 25%;
  margin-bottom: 40rpx;
}

.more-icon {
  text-align: center;
  margin-bottom: 20rpx;
}

.more-icon icon {
  color: #0689F1;
  font-size: 70rpx;
}

.more-desc {
  text-align: center;
  color: #666;
  font-size: 12px;
}