/* pages/call.wxss */

map {
  width: 100%;
  height: 600rpx;
}

.locationpicker-animation {
  animation: markermove 0.5s ease;
}
@keyframes markermove
{
  from {transform: translateY(0)}
  50% {transform: translateY(-10px)}
  to {transform: translateY(0)}
}

.container {
  height: 100%;
}

.map-wrap {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.custome {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  bottom: 188rpx;
  left: 24rpx;
  z-index: 111111;
}

.location {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  bottom: 52rpx;
  left: 24rpx;
  z-index: 11111;
}

.center-location {
  width: 34px;
  height: 34px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -32px;
  margin-left: -18px;
  overflow: hidden;
}

.mark-con {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: #fff;
  font-size: 12px;
  color: #333;
  padding: 40rpx;
}

.mark-tip {
  font-size: 15px;
  font-weight: bold;
}

.mark-type {
  display: flex;
  align-items: center;
}

.mark-type view {
  font-size: 12px;
  width: 180rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  border-radius: 100rpx;
  margin-right: 40rpx;
  color: #666;
  background: #fff;
  box-shadow: 0 0 5px 0 rgba(187, 184, 184, 0.5);
}

.mark-type .active {
  color: #fff;
  background: linear-gradient(180deg, rgba(91, 134, 235, 0.8), rgba(22, 91, 220, 1));
  box-shadow: 0;
}

.mark-addr {
  display: flex;
}

.mark-addr-icon {
  height: 100%;
}

.mark-addr-icon icon {
  font-size: 50rpx;
  color: #4074E2;
}

.mark-addr-panel {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-left: 20rpx;
}

.mark-addr-1 {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.mark-addr-2 {
  font-size: 12px;
  color: #999;
}

.mark-btn button{
  font-size: 14px;
  width: 100% !important;
}

.mark-group {
  text-align: right;
}

.mark-group-picker {
  font-size: 14px;
  font-weight: bold;
  color: #999;
}