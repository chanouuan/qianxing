/* pages/setting/setting.wxss */

.form-wrap {
  font-size: 14px;
  background-color: #fff;
  color: #222;
  padding: 25rpx;
  box-shadow: 0px 5px 5px 0px rgba(216, 211, 211, 0.2);
}

.form-item {
  height: 48px;
  line-height: 48px;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f8f8f8;
}

.form-item:last-child {
  border: none;
}

.form-placeholder {
  font-size: 12px;
  color: #ccc;
}

.form-item input {
  text-align: right;
  width: 100%;
  color: #222;
}

.form-text {
  font-size: 12px;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.form-text icon {
  font-size: 16px;
  color: #ccc;
}
