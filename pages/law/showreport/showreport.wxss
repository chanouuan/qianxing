.container {
  height: auto;
  padding: 0 20rpx 20rpx 20rpx;
}

.form-con {
  font-size: 14px;
  background-color: #fff;
  box-shadow: 5px 5px 10px 0px rgba(222, 222, 222, 0.3);
  border-radius: 20rpx;
  width: 100%;
  color: #222;
  padding: 20rpx;
  margin-top: 20rpx;
}

.form-head {
  font-weight: bold;
}

.form-item {
  height: 48px;
  line-height: 48px;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f5f5f5;
}

.form-item:last-child {
  border-bottom: none;
}

.form-text {
  text-align: right;
  color: rgba(34, 34, 34, 0.5);
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  padding-left: 20rpx;
  font-size: 12px;
}