.wrapper {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 30rpx 0;
  overflow: hidden;
  display: flex;
  align-content: center;
  flex-direction: row;
  justify-content: center;
  font-size: 28rpx;
}

.handWriting {
  background: #fff;
  width: 100%;
  height: 100%;
}

.handRight {
  flex: 1;
  display: flex;
  align-items: center;
}

.handCenter {
  border: 4rpx dashed #e9e9e9;
  flex: 5;
  overflow: hidden;
  box-sizing: border-box;
}

.handTitle {
  transform: rotate(90deg);
  flex: 1;
  color: #666;
}

.boxGroup {
  position: absolute;
  right: -255rpx;
  transform: rotate(90deg);
}

.radioGroup {
  width: 620rpx;
  display: flex;
  justify-content: space-between;
}

.handBtn {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: center;
  flex: 1;
}

.inner-btn {
  font-size: 28rpx;
  color: #666;
  padding: 0 30rpx;
  line-height: 2.5;
  border-radius: 10rpx;
}

.inner-btn::after {
  content: " ";
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1px solid rgba(0, 0, 0, 0.2);
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 20rpx;
}

.delBtn {
  position: absolute;
  top: 250rpx;
  left: 0;
  transform: rotate(90deg);
}

.subBtn {
  position: absolute;
  bottom: 52rpx;
  left: 0;
  transform: rotate(90deg);
  background: #008ef6;
  color: #fff;
}

.previewBtn {
  position: absolute;
  top: 385rpx;
  left: 0;
  transform: rotate(90deg);
  color: #666;
}

.black-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 30rpx;
  left: 25rpx;
}

.black-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 30rpx;
  left: 10rpx;
}

.red-select {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  top: 140rpx;
  left: 25rpx;
}

.red-select.color_select {
  width: 90rpx;
  height: 90rpx;
  top: 120rpx;
  left: 10rpx;
}
