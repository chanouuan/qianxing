/* pages/law/reportfile/reportfile.wxss */

.content-view {
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  opacity: 0;
  font-size: 14px;
}

.content-show {
  z-index: 2;
  opacity: 1;
  transition: 0.3s;
}

.content-wrap {
  padding: 50px 0 120rpx 0;
}

.content-inner {
  padding: 20rpx;
  background: #fff;
}

.progress {
  position: absolute;
  left: 0;
  height: 100%;
  width: 0%;
  background: rgba(0, 0, 0, .5);
  transition: width 1s;
}

.title {
  font-weight: bold;
  height: 50px;
  line-height: 50px;
}

.panel1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  height: 400rpx;
}

.panel1-item {
  position: relative;
  width: 222rpx;
  height: 180rpx;
  background: #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel1-item icon {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  background: #298df8;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}

.panel1-item image {
  width: 100%;
  height: 100%;
}

.panel2 {
  display: flex;
  justify-content: space-between;
}

.panel2-item-img {
  width: 345rpx;
  height: 250rpx;
  background: #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel2-item-img icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  background: #298df8;
  text-align: center;
  color: #fff;
  font-size: 60rpx;
}

.panel2-item-img image {
  width: 100%;
  height: 100%;
}

.panel2-item-t {
  font-size: 12px;
  margin-top: 20rpx;
  text-align: center;
}

.panel-add {
  height: 56px;
  line-height: 56px;
}

.panel-bottom {
  position: fixed;
  z-index: 9999;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 0 10px 0 rgba(216, 211, 211, 0.6)
}

.btn {
  font-size: 14px;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(45deg, rgba(91, 222, 130, 1), rgba(31, 211, 144, 1));
  border-radius: 10rpx;
  font-weight: 500;
  padding: 0;
  border: none;
}

.panel-search {
  margin: 40rpx 0;
}

.panel-search input{
  border-bottom: 1px solid #e5e5e5;
}

.panel-table {
  width: 100%;
  border-top: 0.5px solid rgba(0, 0, 0, 0.1);
  border-left: 0.5px solid rgba(0, 0, 0, 0.1);
  border-right: 0.5px solid rgba(0, 0, 0, 0.1);
  font-size: 12px;
  text-align: center;
}

.panel-tr {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
  padding: 20rpx 0;
}

.panel-th {
  flex: 1;
  font-weight: bold;
}

.panel-td {
  flex: 1;
}

.panel-td-r {
  flex: 1;
  padding-right: 20rpx;
  text-align: right;
}

.panel-checkbox {
  display: flex;
  flex-direction: column;
  font-size: 12px;
}

.panel-checkbox label {
  height: 40px;
  display: flex;
  align-items: center;
}

.panel-checkbox input {
  width: 100%;
  padding-left: 28px;
}

.panel-checkbox-group {
  display: flex;
  justify-content: space-between;
  padding-left: 28px;
}

.panel-form {
  font-size: 12px;
  padding-bottom: 20rpx;
}

.panel-form-item {
  height: 40px;
  line-height: 40px;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.panel-form-item:last-child {
  border-bottom: none;
}

.panel-form-item input {
  text-align: right;
  width: 100%;
  color: #222;
}

.panel-form-text {
  text-align: right;
  flex: 1;
  white-space: nowrap;
  padding-left: 20rpx;
  font-size: 12px;
}