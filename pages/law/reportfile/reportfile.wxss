/* pages/law/reportfile/reportfile.wxss */

.content {
  position: absolute;
  z-index: 1;
  top: 40px;
  right: 0;
  left: 0;
  bottom: 0;
  opacity: 0;
  font-size: 14px;
}

.content-show {
  z-index: 2;
  opacity: 1;
  transition: 0.3s;
}

.content-inner {
  margin-top: 10px;
  padding: 20rpx 20rpx 120rpx 20rpx;
  background: #fff;
}

.progress {
  position: absolute;
  left: 0;
  height: 100%;
  width: 0%;
  background: rgba(0, 0, 0, .5);
  transition: width 1s;
}

.title {
  font-weight: bold;
  height: 54px;
  line-height: 54px;
}

.panel1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
  height: 400rpx;
}

.panel1-item {
  position: relative;
  width: 222rpx;
  height: 180rpx;
  background: #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel1-item icon {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 50%;
  background: #298df8;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}

.panel1-item image {
  width: 100%;
  height: 100%;
}

.panel2 {
  display: flex;
  justify-content: space-between;
}

.panel2-item-img {
  width: 345rpx;
  height: 250rpx;
  background: #e5e5e5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel2-item-img icon {
  width: 120rpx;
  height: 120rpx;
  line-height: 120rpx;
  border-radius: 50%;
  background: #298df8;
  text-align: center;
  color: #fff;
  font-size: 60rpx;
}

.panel2-item-img image {
  width: 100%;
  height: 100%;
}

.panel2-item-t {
  font-size: 12px;
  margin-top: 20rpx;
  text-align: center;
}

.panel-add {
  height: 56px;
  line-height: 56px;
}

.panel-bottom {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 120rpx;
  display: flex;
  align-items: center;
  background: #fff;
  box-shadow: 0 0 10px 0 rgba(216, 211, 211, 0.6)
}

.btn {
  font-size: 14px;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(45deg, rgba(91, 222, 130, 1), rgba(31, 211, 144, 1));
  border-radius: 10rpx;
  font-weight: 500;
  padding: 0;
  border: none;
}