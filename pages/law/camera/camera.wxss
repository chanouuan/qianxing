/* pages/law/camera/camera.wxss */

page {
  background-color: #353535;
}

camera {
  width: 100%;
  height: 100%;
}

canvas {
  width: 100%;
  height: 100%;
  /* text-indent: 100%; */
}

.camera-bg {
  width: 100%;
  padding: 0 30rpx;
  background: rgba(0, 0, 0, .5);
}

.camera-wrap {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: absolute;
  z-index: 9999;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera-flash {
  flex: 1;
  display: flex;
  align-items: center;
}

.camera-light {
  width: 64rpx;
  height: 64rpx;
}

.camera-title {
  text-align: center;
  padding-bottom: 30rpx;
}

.camera-area {
  width: 100%;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: space-between;
}

.camera-border {
  width: 30rpx;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}

.camera-frame {
  flex: 1;
  height: 100%;
  border: 4rpx dashed #09bb07;
}

.camera-remark {
  text-align: center;
  padding-top: 30rpx;
  font-size: 26rpx;
  color: #ccc;
}

.camera-op {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.camera-back {
  width: 60rpx;
  height: 60rpx;
}

.camera-take {
  width: 100rpx;
  height: 100rpx;
}

.camera-album {
  width: 60rpx;
  height: 60rpx;
}