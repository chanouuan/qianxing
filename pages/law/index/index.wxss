/**index.wxss**/

page {
  background: #fff;
}

.container {
  font-size: 12px;
  display: flex;
  flex-direction: column;
  height: 100%;
  padding-bottom: 60px;
}

.custom-swiper {
  height: 360rpx;
  width: 100%;
}

.swiper-img {
  width: 100%;
  height: 100%;
  background-color: #fff;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: relative;
}

.swiper-txt {
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  padding: 0 30rpx;
  overflow: hidden;
  font-size: 12px;
  color: #fff;
}

.info-con {
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-con .green {
  color: #fff;
  background: rgba(7, 197, 7, 0.5);
  padding: 4px 10px;
  border-radius: 10px;
  font-size: 10px;
}

.info-con .grey {
  color: #fff;
  background: rgba(195, 196, 209, 0.5);
  padding: 4px 10px;
  border-radius: 10px;
  font-size: 10px;
}

.count-con {
  margin: 0 30rpx 0 30rpx;
  box-shadow: 0px 0px 10px 0px rgba(221, 223, 224, 0.8);
  background-color: #fff;
  border-radius: 10px;
  height: 150rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.count-item {
  width: 33.33%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.count-border {
  border-right: 1px solid #ebebeb;
}

.count-num {
  font-size: 50rpx;
  font-weight: bold;
  color: #333;
}

.count-txt {
  color: #666;
}

.main-con {
  margin: 40rpx 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.main-item {
  text-align: center;
}

.main-icon {
  background-image: linear-gradient(to right, rgba(183, 197, 234, 1), rgba(165, 186, 233, 1));
  border-radius: 5px;
  height: 100rpx;
  width: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.bc-1 {
  background-image: linear-gradient(to right, rgba(153, 229, 154, 1), rgba(142, 209, 118, 1));
}

.bc-2 {
  background-image: linear-gradient(to right, rgba(239, 215, 152, 1), rgba(243, 190, 74, 1));
}

.bc-3 {
  background-image: linear-gradient(to right, rgba(234, 158, 163, 1), rgba(231, 132, 126, 1));
}

.main-icon icon {
  font-size: 60rpx;
  color: #fff;
}

.main-desc {
  margin-top: 20rpx;
  color: #222;
  text-align: center;
}

.con-title {
  margin: 40rpx 0 30rpx 30rpx;
  font-size: 16px;
  font-weight: 700;
  color: #222;
}

.more-con {
  flex: 1;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evnaly;
  align-items: center;
}

.more-item {
  width: 25%;
}

