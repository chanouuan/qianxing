<!--用户端首页-->
<view class="user-container" wx:if="{{templateId=='user'}}">
  <!--轮播-->
  <view class="selection">
    <swiper class="user-swiper" autoplay="true">
      <block wx:for="{{imgUrls}}" wx:key="index">
        <swiper-item>
          <view class="swiper-img" style="background-image:url({{item}})">
            <text class="swiper-txt">加强疫情防控工作指导</text>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!--内容框1-->
  <view class="show-con" bindtap="callTap">
    <view class="show-item">
      <view class="show-icon">
        <icon class="iconfont icon-guzhangbaojing"></icon>
      </view>
      <view class="show-desc">事故报案</view>
    </view>
    <view class="show-item">
      <view class="show-icon">
        <icon class="iconfont icon-guzhangbaojing"></icon>
      </view>
      <view class="show-desc">施工申请</view>
    </view>
    <view class="show-item">
      <view class="show-icon">
        <icon class="iconfont icon-baoanlipei"></icon>
      </view>
      <view class="show-desc">服务投诉</view>
    </view>
  </view>
  <!--内容框2-->
  <view class="many-con">
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-orders"></icon>
      </view>
      <view class="many-desc">报案查询</view>
    </view>
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-cars"></icon>
      </view>
      <view class="many-desc">挪车求助</view>
    </view>
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-sousuo"></icon>
      </view>
      <view class="many-desc">违法查询</view>
    </view>
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-sousuo"></icon>
      </view>
      <view class="many-desc">违法查询</view>
    </view>
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-orders"></icon>
      </view>
      <view class="many-desc">报案查询</view>
    </view>
    <view class="many-item">
      <view class="many-icon">
        <icon class="iconfont icon-cars"></icon>
      </view>
      <view class="many-desc">挪车求助</view>
    </view>
    <view class="many-item" wx:if="{{userInfo.group_id}}" bindtap="tapLawApp">
      <view class="many-icon">
        <icon class="iconfont icon-baoanlipei"></icon>
      </view>
      <view class="many-desc">路政管理</view>
    </view>
    <view class="many-item" bindtap="moreApp">
      <view class="many-icon">
        <icon class="iconfont icon-gengduo"></icon>
      </view>
      <view class="many-desc">更多</view>
    </view>
  </view>
</view>

