/**index.wxss**/

page {
  background-color: #fff;
}

.container {
  font-size: 12px;
  font-family: Arial, Helvetica, sans-serif;
}

.custom-swiper {
  height: 360rpx;
  width: 100%;
}

.swiper-img {
  width: 100%;
  height: 100%;
  background-color: #fff;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
  position: relative;
}

.swiper-txt {
  position: absolute;
  bottom: 0;
  background: rgba(0, 0, 0, .5);
  height: 50rpx;
  line-height: 50rpx;
  width: 100%;
  padding: 0 30rpx;
  overflow: hidden;
  font-size: 12px;
  color: #eee;
}

.count-con{
  margin: 45rpx 30rpx 0 30rpx;
  box-shadow: 0px 0px 15px 0px rgba(221, 243, 255, 0.8);
  background-color: #fff;
  border-radius: 10px;
  height: 150rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}

.count-item {
  width: 33.33%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.count-border {
  border-right: 1px solid #ebebeb;
}

.count-num {
  font-size: 23px;
  font-weight: bold;
  color: #333;
}

.count-txt {
  font-size: 12px;
  color: #666;
}

.main-con {
  margin: 45rpx 30rpx 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.main-item {
  text-align: center;
}

.main-icon {
  background-image: linear-gradient(to right, rgba(183,197,234,1), rgba(165,186,233,1));
  border-radius: 5px;
  height: 100rpx;
  width: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 auto;
}

.bc-1 {
  background-image: linear-gradient(to right, rgba(153,229,154,1), rgba(142,209,118,1));
}

.bc-2 {
  background-image: linear-gradient(to right, rgba(239,215,152,1), rgba(243,190,74,1));
}

.bc-3 {
  background-image: linear-gradient(to right, rgba(234,158,163,1), rgba(231,132,126,1));
}

.main-icon icon {
  font-size: 60rpx;
  color: #fff;
}

.main-desc {
  margin-top: 20rpx;
  font-size: 12px;
  color: #666;
  text-align: center;
}

.con-title {
  margin: 60rpx 0 0 30rpx;
  font-size: 16px;
  font-weight: 700;
  color: #666;
}

.more-con {
  margin-top: 45rpx;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-evenly;
}

.more-item {
  width: 25%;
}

.mb60 {
  margin-bottom: 60rpx;
}

.more-icon {
  text-align: center;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.more-icon icon {
  color: #879DCC;
  font-size: 70rpx;
}

.more-desc {
  text-align: center;
  color: #666;
  font-size: 12px;
}