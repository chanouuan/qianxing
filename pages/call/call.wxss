/* pages/call.wxss */

map {
  width: 100%;
}

@keyframes bounce-in {
  0% {transform: translateY(0);}
  50% {transform: translateY(-5px);}
  100% {transform: translateY(0);}
}

.marker-active {
  animation: bounce-in .5s;
}

.map-wrap {
  height: 600rpx;
  display: flex;
  flex-direction: column;
  flex: 1;
}

.custome {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  bottom: 188rpx;
  left: 24rpx;
  z-index: 111111;
}

.location {
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  bottom: 52rpx;
  left: 24rpx;
  z-index: 11111;
}

.center-location {
  width: 34px;
  height: 34px;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -34px;
  margin-left: -17px;
}

.form-wrap {
  font-size: 14px;
  background-color: #fff;
  box-shadow: 0px 6px 10px 0px rgba(221, 243, 255, 0.2);
}

.form-item {
  height: 56px;
  line-height: 56px;
	padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 0.5px solid rgba(0, 0, 0, 0.1);
}

.form-wrap input {
  text-align: right;
	width: 100%;
	height: 20px;
	line-height: 20px;
	color: #222;
}

.form-txt {
  display:flex;
	align-items: center;
  color:rgba(34,34,34,0.5);
  flex: 1;
}

.cx-btn {
  font-size: 32rpx;
  width: 288rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  color: #fff;
  background: linear-gradient(45deg, rgba(91, 222, 130, 1), rgba(31, 211, 144, 1));
  border-radius: 10rpx;
  font-weight: 500;
  margin: 0;
  padding: 0;
  border: none;
}